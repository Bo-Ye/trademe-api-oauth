<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <display-name>Trade me API OAuth</display-name>

    <servlet>
        <servlet-name>Watchlist</servlet-name>
        <servlet-class>com.boye.trademe.Watchlist</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>WatchlistCallback</servlet-name>
        <servlet-class>com.boye.trademe.WatchlistCallback</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Watchlist</servlet-name>
        <url-pattern>/watchlist</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>WatchlistCallback</servlet-name>
        <url-pattern>/watchlist-callback</url-pattern>
    </servlet-mapping>
</web-app>
